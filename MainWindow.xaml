<Window x:Class="DictionarySort.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DictionarySort"
        mc:Ignorable="d"
        Title="Dictionary Sort" Height="250" Width="400">
    <Grid x:Name="layout1">
        <Grid>
            <Grid.Effect>
                <BlurEffect/>
            </Grid.Effect>

        </Grid>
        <Grid x:Name="layout2" Visibility="Visible">

            <Label x:Name="Label1" HorizontalAlignment="Left" Margin="0,155,0,0" VerticalAlignment="Top" Height="57" Width="377" FontFamily="Bahnschrift SemiBold" FontWeight="Bold" FontSize="16" AutomationProperties.IsRowHeader="True" Content="" FontStyle="Normal"/>
            <StackPanel x:Name="stackPanel1" AllowDrop="True" Drop="ImagePanel_Drop" GiveFeedback="ImagePanel_GiveFeedback" Margin="0,-11,0,0" Background="White" Opacity="0" DragEnter="layout2_DragEnter" DragLeave="layout2_DragLeave" Visibility="Visible"  />
            <Button Content="SORT" HorizontalAlignment="Left" Margin="262,20,0,0" VerticalAlignment="Top" Height="48" Width="96" FontFamily="Agency FB" FontSize="18" FontWeight="Bold" Click="Button_Click" FontStyle="Normal" IsDefault="True" Background="#FFEDE3E3"/>
        </Grid>


    </Grid>



</Window>
