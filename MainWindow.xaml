<Window x:Class="DictionarySort.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DictionarySort"
        mc:Ignorable="d"
        Title="Dictionary Sort" Height="250" Width="400">
    <Grid x:Name="layout1">
        <Grid>
            <Grid.Effect>
                <BlurEffect/>
            </Grid.Effect>

        </Grid>

        <Label x:Name="Label1" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="57" Width="380" FontFamily="Bahnschrift SemiBold" FontWeight="Bold" FontSize="16" AutomationProperties.IsRowHeader="True" Content="" FontStyle="Normal"/>
        <Grid x:Name="layout2" Visibility="Visible">

            <StackPanel x:Name="stackPanel1" AllowDrop="True" Drop="ImagePanel_Drop" GiveFeedback="ImagePanel_GiveFeedback" Margin="0,-11,0,0" Background="White" Opacity="0" DragEnter="layout2_DragEnter" DragLeave="layout2_DragLeave" Visibility="Visible" />
            <StackPanel AllowDrop="True" Drop="ImagePanel_Drop" GiveFeedback="ImagePanel_GiveFeedback" DragEnter="layout2_DragEnter" DragLeave="layout2_DragLeave">
                <Button x:Name="SortByFirstWord" Width="30"  Margin="-250,68,80,5"  Height="21" Click="Button_Click" Content="↓" Background="#FFF7F7F7" FontSize="18" FontFamily="Britannic Bold" FontWeight="Bold"/>
                <Button x:Name="SortBySecondWord"  Width="30"  Margin="-150,-30,0,0" Height="22" Click="Button_Click_1" Content="↓" Background="#FFF7F7F7" FontSize="18" FontFamily="Britannic Bold" FontWeight="Bold"/>
            </StackPanel>
            <StackPanel AllowDrop="True" Drop="ImagePanel_Drop" GiveFeedback="ImagePanel_GiveFeedback" DragEnter="layout2_DragEnter" DragLeave="layout2_DragLeave">
                <ScrollViewer Margin="10,90,80,5" Height="109">
                    <StackPanel x:Name="StackPanelWords" Width="323"/>

                </ScrollViewer>
            </StackPanel>
            <StackPanel AllowDrop="True" Drop="ImagePanel_Drop" GiveFeedback="ImagePanel_GiveFeedback" DragEnter="layout2_DragEnter" DragLeave="layout2_DragLeave">

                <Button Content="Button" Margin="290,25,0,0" Width="86" Height="28" Click="SaveFile" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <CheckBox x:Name ="MakeCopyCheckBox" Content="Make a copy" HorizontalAlignment="Left" Margin="290,5,0,0" VerticalAlignment="Top" Checked="CopyCheckBox" Unchecked="CopyCheckBox"/>
            </StackPanel>
        </Grid>


    </Grid>



</Window>
